{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["jest"],
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "__API__": true,
    "__BANK_FEATURE__": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.dev.config.babel.js"
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/no-array-index-key": [0],
    "react/forbid-prop-types": [0],
    "import/extensions": [0],
    "semi": [2, "never"],
    "no-nested-ternary": [0],
    "no-confusing-arrow": [0],
    "import/no-duplicates": [0],
    "jsx-a11y/href-no-hash": [0],
    "jsx-a11y/click-events-have-key-events": [0],
    "function-paren-newline": ["error", "multiline"],
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": {
          "consistent": true
        },
        "ObjectPattern": {
          "multiline": true
        }
      }
    ]
  }
}
