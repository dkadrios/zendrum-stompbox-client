{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:flowtype/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["jest", "flowtype"],
  "globals": {
    "__DEV__": true,
    "__TEST__": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.dev.config.babel.js"
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/no-unused-prop-types": [0],
    "import/extensions": [0],
    "semi": [2, "never"],
    "no-nested-ternary": [0],
    "no-confusing-arrow": [0],
    "import/no-duplicates": [0]
  }
}
